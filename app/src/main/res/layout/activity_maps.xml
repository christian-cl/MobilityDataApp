<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/map_fragment_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.MapFragment"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <ImageButton
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/stop_button"
            android:elevation="10dp"
            android:background="@drawable/circle"
            android:src="@mipmap/ic_add_white"/>
        <ImageButton
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/stop_button_speak"
            android:elevation="10dp"
            android:background="@drawable/circle"
            android:src="@drawable/ic_action_microphone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_button"
            android:text="@string/button_start_collecting"
            android:onClick="startCollectingData"
            android:background="@color/material_green_500"
            android:layout_marginRight="@dimen/abc_action_button_min_width_overflow_material"
            android:layout_marginLeft="@dimen/abc_action_button_min_width_material"
            android:padding="2dp"
            />
        <Button
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/end_button"
            android:text="@string/button_end_collecting"
            android:onClick="stopCollectingData"
            android:background="@color/material_blue_500"
            android:padding="2dp"/>
    </LinearLayout>
</RelativeLayout>
